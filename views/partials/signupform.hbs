<form action="/auth/signup" method="POST">
    <div class="card-body pt-5">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label" >Name</label>
            <input name="name" type="text" class="form-control"aria-describedby="emailHelp" />
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input name="email"type="email"class="form-control"aria-describedby="emailHelp"/>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label" >Password</label>
            <input name="password" type="password" class="form-control"aria-describedby="emailHelp" />
        </div>
        {{#if driver}}
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label" >Car Plate</label>
            <input name="car_plate" type="text" class="form-control"aria-describedby="emailHelp" />
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label" >Car Model</label>
            <input name="car_model" type="text" class="form-control"aria-describedby="emailHelp" />
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label" >Car Color</label>
            <input name="car_color" type="text" class="form-control"aria-describedby="emailHelp" />
        </div>
        {{/if}}
        <button class="btn btn-success mb-3">Sign up</button>
        <div>
            <span>Already have an account?</span>
            <a href="/auth">Log in</a>
        </div>
    </div>
</form>